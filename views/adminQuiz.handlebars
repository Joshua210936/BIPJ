<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.min.css">
    <title>Create Quizzes for Users</title>
    <style>
        .question {
            margin-bottom: 1em;
        }

        .add-question-button {
            display: block;
            margin: 1em 0;
        }
    </style>
</head>

<body>
    <nav class="container-fluid">
        <ul>
            <li><strong>Quiz Creator</strong></li>
        </ul>
        <ul>
            <li><a href="#">Home</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#" role="button">Contact</a></li>
        </ul>
    </nav>
    <main class="container">
        <form action="/createQuiz" method="POST" id="quizForm">
            <label for="quizID">Quiz ID</label>
            <input type="text" id="quizID" name="quizID" placeholder="Enter Quiz ID"><br>
            <label for="quizModule">Module</label>
            <select id="quizModule" name="quizModule">
                <option value="1">Module 1</option>
                <option value="2">Module 2</option>
                <option value="3">Module 3</option>
                <option value="4">Module 4</option>
                <option value="5">Module 5</option>
            </select>

            <div id="questions">
                <div class="question" id="question1">
                    <h3>Question 1</h3>
                    <div class="input-group">
                        <label for="quizName1">Quiz Name</label>
                        <input type="text" id="quizName1" name="quizName1" placeholder="Enter Quiz Name">
                    </div>
                    <div>
                        <label>Options</label>
                        <div>
                            <input type="radio" id="q1O1" name="quizOption1">
                            <input type="text" name="q1O1Text" placeholder="Enter option text">
                        </div>
                        <div>
                            <input type="radio" id="q1O2" name="quizOption1">
                            <input type="text" name="q1O2Text" placeholder="Enter option text">
                        </div>
                        <div>
                            <input type="radio" id="q1O3" name="quizOption1">
                            <input type="text" name="q1O3Text" placeholder="Enter option text">
                        </div>
                        <div>
                            <input type="radio" id="q1O4" name="quizOption1">
                            <input type="text" name="q1O4Text" placeholder="Enter option text">
                        </div>
                    </div>
                </div>
            </div>

            <button type="button" class="add-question-button" id="addQuestionButton">Add Question</button>
            <button type="submit">Submit Quiz</button>
        </form>
    </main>
    <footer class="container">
        <small><a href="#">Privacy Policy</a> â€¢ <a href="#">Terms of Service</a></small>
    </footer>

    <script>
        let questionCount = 1;

        document.getElementById('addQuestionButton').addEventListener('click', () => {
            questionCount++;
            const newQuestion = document.createElement('div');
            newQuestion.classList.add('question');
            newQuestion.id = `question${questionCount}`;
            newQuestion.innerHTML = `
                <h3>Question ${questionCount}</h3>
                <div class="input-group">
                    <label for="quizName${questionCount}">Quiz Name</label>
                    <input type="text" id="quizName${questionCount}" name="quizName${questionCount}" placeholder="Enter Quiz Name">
                </div>
                <div>
                    <label>Options</label>
                    <div>
                        <input type="radio" id="q${questionCount}O1" name="quizOption${questionCount}">
                        <input type="text" name="q${questionCount}O1Text" placeholder="Enter option text">
                    </div>
                    <div>
                        <input type="radio" id="q${questionCount}O2" name="quizOption${questionCount}">
                        <input type="text" name="q${questionCount}O2Text" placeholder="Enter option text">
                    </div>
                    <div>
                        <input type="radio" id="q${questionCount}O3" name="quizOption${questionCount}">
                        <input type="text" name="q${questionCount}O3Text" placeholder="Enter option text">
                    </div>
                    <div>
                        <input type="radio" id="q${questionCount}O4" name="quizOption${questionCount}">
                        <input type="text" name="q${questionCount}O4Text" placeholder="Enter option text">
                    </div>
                </div>
            `;
            document.getElementById('questions').appendChild(newQuestion);
        });
    </script>
</body>

</html>
