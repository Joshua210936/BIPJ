        font-family: 'Arial', sans-serif;
        background-color: #f2f2f2;
        margin: 0;
        padding: 0;
    }

    .containerQuiz {
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    form {
        display: flex;
        flex-direction: column;
    }

    label {
        margin-bottom: 5px;
        font-weight: bold;
    }

    input[type="text"], input[type="number"], select {
        padding: 8px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
    }

    .options {
        margin-top: 10px;
    }

    .options label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    .options input[type="radio"], .options input[type="text"] {
        margin-bottom: 5px;
    }

    .add-question-button, .submit-button {
        width: 200px;
        padding: 10px;
        margin-top: 10px;
        margin-bottom: 20px;
        background-color: #0cc4b5;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

    .add-question-button:hover, .submit-button:hover {
        background-color: #218a93;
    }

    .question {
        margin-top: 20px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btnSubmit {
        width: auto;
        padding: 10px;
        margin-top: 10px;
        margin-bottom: 20px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

    .btnSubmit:hover {
        background-color: #45a049;
    }

    
</style>