<head>
    <link rel="stylesheet" href="/css/userSetprofile.css">
    <title>Forget Password - Sigma Properties</title>
</head>
<body>
    <div class="container">
        <aside class="sidebar">
            <div class="profile-section">
                <h2>{{customer.Customer_fName}} {{customer.Customer_lName}}</h2>
            </div>
            <nav class="sidebar-nav">
                <ul>
                    <li><a href="#">My Profile</a></li>
                    <li><a href="/forgetpassword">Reset Password</a></li>
                </ul>
            </nav>
        </aside>
        <main class="main-content">
            <div class="register-box">
                <div class="welcome-text">Forget Password</div>
                <form action="/requestOTP" method="post">
                    <div class="input-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" placeholder="Enter your email" required>
                    </div>
                    <button type="submit" class="formbutton">Request OTP</button>
                </form>
            </div>
        </main>
    </div>
</body>
