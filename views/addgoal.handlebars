<body>
    <div class="container">
        <button class="go-back" >Go Back</button>
        <h1>Add a new goal</h1>
        <p>Let's save for something awesome!</p>
        <form method="post">
            <div class="section">
                <h2>Goal Details</h2>
                <label for="goal_name">Goal Name:</label>
                <input type="text" id="goal_name" name="goal_name" required>

                <label for="target_amount">Target Amount to Save:</label>
                <input type="text" id="target_amount" name="target_amount" required>
            </div>

            <div class="section">
                <h2>Timeline</h2>
                <label for="start_date">Start Date:</label>
                <input type="date" id="start_date" name="start_date" required>

                <label for="end_date">End Date:</label>
                <input type="date" id="end_date" name="end_date" required>

                <label for="add_picture">Add Picture:</label>
                <input type="file" id="add_picture" name="add_picture">
            </div>

            <button type="submit" class="confirm-goal">Confirm Goal</button>
        </form>
    </div>


