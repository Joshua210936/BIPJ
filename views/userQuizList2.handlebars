<head>
    <title>Quiz Overview</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>
        /* Include your existing styles here */
        
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        .containerQuiz {
            max-width: 1000px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .test-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .test-table th, .test-table td {
            border: 1px solid #ddd;
            padding: 12px 15px;
            text-align: center;
        }

        .test-table th {
            background-color: #f4f4f9;
            color: #333;
        }

        .test-table tr:hover {
            background-color: #f1f1f1;
        }

        .btn-take-quiz {
            padding: 0.5em 1em;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            background-color: #4CAF50;
            color: white;
        }

        .btn-take-quiz:hover {
            background-color: #45a049;
        }

        .search {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .search-input {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ddd;
            margin-left: 10px;
            font-size: 16px;
        }

        .search-icon {
            font-size: 24px;
            color: #888;
        }
        .filter-group {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .filter-label {
            margin-right: 10px;
            font-weight: bold;
        }

        .filter-select {
            padding: 5px;
            border-radius: 5px;
            border: 1px solid #ddd;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <div class="containerQuiz">
        <h1>Tests Overview</h1>
        
        <div class="search">
            <span class="search-icon material-symbols-outlined">search</span>
            <input class="search-input" type="search" placeholder="Search Test">
        </div>

        <div class="filter-group">
            <label for="moduleFilter" class="filter-label">Filter by Module:</label>
            <select id="moduleFilter" class="filter-select">
                <option value="">All Modules</option>
                <option value="1">Module 1</option>
                <option value="2">Module 2</option>
                <option value="3">Module 3</option>
                <option value="4">Module 4</option>
                <option value="5">Module 5</option>
            </select>
        </div>
        
        <table class="test-table">
            <thead>
                <tr>
                    <th>Test Name</th>
                    <th>Module Number</th>
                    <th>Number of Questions</th>
                    <th>Total Points</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="testsTable">
                {{#each tests}}
                    <tr class="test-item" data-test-name="{{this.testName}}">
                        <td>{{this.testName}}</td>
                        <td>{{this.module}}</td>
                        <td>{{this.numberOfQuestions}}</td>
                        <td>{{this.totalPoints}}</td>
                        <td>
                            <button onclick="takeQuiz('{{this.testID}}')" class="btn-take-quiz">Take Quiz</button>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</body>
<script src="/js/userQuizList.js"></script>
<script>
    function takeQuiz(testID) {
        window.location.href = `/userQuiz/${testID}`;
    }
</script>
