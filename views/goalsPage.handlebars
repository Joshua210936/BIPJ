<head>

    <title>Savings Goals</title>
   
</head>
<body>
    <h1>Savings Goals</h1>
    <div class="container">
        {{#if savings.length}}
            {{#each savings}}
                <div class="goal-header">
                    <h2>{{this.Saving_goalName}}</h2>
                    <button>Add a goal</button>
                </div>
                <div class="goal-details">
                    <p>Goal amount: ${{this.Saving_amount}}</p>
                    <p>Monthly target: ${{this.Saving_calculate}}</p>
                    <p>Start date: {{this.Saving_startDate}}</p>
                    <p>End date: {{this.Saving_endDate}}</p>
                </div>
               
                <div class="goal-buttons">
                    <button class="edit">Edit goal</button>
                    <button class="view">View all goals</button>
                </div>
            {{/each}}
        {{else}}
            <p>No Current Savings Goals</p>
        {{/if}}
    </div>
</body>

 <style>

        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }
        .container {
            background-color: #fff;
            padding: 20px;
            max-width: 1000px;
            margin: 0 auto;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
        }
        .goal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .goal-overview {
            margin-top: 20px;
        }
        .goal-chart {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            margin-top: 20px;
        }
        .goal-chart div {
            width: 50px;
            height: 100px;
            background-color: green;
            margin: 0 5px;
            display: flex;
            justify-content: center;
            align-items: flex-end;
            color: white;
        }
        .goal-chart div.missed {
            background-color: red;
        }
        .goal-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }
        .goal-buttons button {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .goal-buttons .edit {
            background-color: yellow;
            color: black;
        }
        .goal-buttons .view {
            background-color: green;
            color: white;
        }
    </style>
