<head>
    <title>Savings Goals</title>   
</head>
<body>
    <div class="container">
        <h1>Savings Goals</h1>
        {{#if savings.length}}
            {{#each savings}}
                <div class="goal-header">
                    <h2>{{this.Saving_goalName}}</h2>
                    <button onclick="showPopup('{{this.Saving_goalName}}')">Add savings</button>
                </div>
                <div class="goal-details">
                    <p>Goal amount: ${{this.Saving_amount}}</p>
                    <p>Monthly target: ${{this.Saving_calculate}}</p>
                    <p>Start date: {{this.Saving_startDate}}</p>
                    <p>End date: {{this.Saving_endDate}}</p>
                </div>
                <div class="goal-buttons">
                    <button class="edit">Edit goal</button>
                    <button class="view">View all goals</button>
                </div>
            {{/each}}
        {{else}}
            <p>No Current Savings Goals</p>
        {{/if}}
    </div>

    <div class="overlay" onclick="hidePopup()"></div>
    <div class="popup">
        <div class="popup-header">
            <h2 id="popup-title">Saving tracker tool</h2>
            <button onclick="hidePopup()">Close</button>
        </div>
        <p>Track your savings progress with our easy-to-use Savings Tracker. 
            Use the calendar below to input your daily savings. 
            This helps you stay on track and visualize your progress toward your financial goals.</p>
        <div class="calendar-nav">
            <button onclick="changeMonth(-1)">&#9664; Previous</button>
            <span id="calendar-month-year"></span>
            <button onclick="changeMonth(1)">Next &#9654;</button>
        </div>
        <div class="calendar" id="calendar">
            <!-- Calendar days will be generated here -->
        </div>
        <button onclick="updateSavings()">Update savings</button>
    </div>

</body>
    <script>
        let currentMonth = new Date().getMonth() + 1; // Months are 0-based, so add 1
        let currentYear = new Date().getFullYear();

        function showPopup(goalName) {
            document.querySelector('.popup').style.display = 'block';
            document.querySelector('.overlay').style.display = 'block';
            document.getElementById('popup-title').innerText = `Saving tracker tool for ${goalName}`;
            generateCalendar(currentMonth, currentYear);
        }

        function hidePopup() {
            document.querySelector('.popup').style.display = 'none';
            document.querySelector('.overlay').style.display = 'none';
        }

        function generateCalendar(month, year) {
            const calendar = document.getElementById('calendar');
            const monthYearLabel = document.getElementById('calendar-month-year');
            calendar.innerHTML = ''; // Clear previous calendar
            monthYearLabel.innerText = `${new Date(year, month - 1).toLocaleString('default', { month: 'long' })} ${year}`;
            const daysInMonth = new Date(year, month, 0).getDate();

            for (let day = 1; day <= daysInMonth; day++) {
                const dayDiv = document.createElement('div');
                dayDiv.textContent = `${day}/${month}/${year}`;
                const input = document.createElement('input');
                input.type = 'number';
                input.placeholder = 'Enter Amount';
                dayDiv.appendChild(input);
                calendar.appendChild(dayDiv);
            }
        }

        function changeMonth(direction) {
            currentMonth += direction;
            if (currentMonth === 0) {
                currentMonth = 12;
                currentYear--;
            } else if (currentMonth === 13) {
                currentMonth = 1;
                currentYear++;
            }
            generateCalendar(currentMonth, currentYear);
        }

        function updateSavings() {
            const calendar = document.getElementById('calendar');
            const inputs = calendar.querySelectorAll('input');
            const savingsData = Array.from(inputs).map(input => ({
                date: input.parentElement.textContent.trim(),
                amount: input.value
            }));
            console.log('Savings Data:', savingsData);
        }
    </script>

