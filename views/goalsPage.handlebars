            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .goal-header h2 {
            font-size: 20px;
            margin: 0;
        }
        .goal-header button {
            background-color: #ffcc00;
            border: none;
            padding: 5px 10px;
            font-size: 14px;
            cursor: pointer;
            border-radius: 5px;
            color: #000;
        }
        .goal-details {
            margin-bottom: 20px;
        }
        .goal-details p {
            margin: 5px 0;
        }
        .arrow-button {
            background-color: #ffcc00;
            border: none;
            padding: 10px;
            font-size: 20px;
            cursor: pointer;
            border-radius: 5px;
            color: #000;
        }
        .popup, .popup-edit {
            display: none;
            position: fixed;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            max-width: 70%;
            max-height: 70%;
            width: 400px;
            overflow-y: auto;
        }
        .popup-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .popup-header h2 {
            font-size: 20px;
            margin: 0;
        }
        .popup-header button {
            background-color: #ffcc00;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
            color: #000;
        }
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.484);
            display: none;
            z-index: 999;
            backdrop-filter: blur(2px);
            transition: all 0.3s ease-in-out;
        }
